#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server/.envrc" "/Users/felix.berger/Documents/PlatformIO/Projects/TEC-H4-IoT1-3-2/Server/.direnv"/*.rc
